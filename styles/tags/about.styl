		width: 38px
		height 46px
		margin: 0 15px 0 0



.about-item
	position relative
	flex: 0 0 (100% / 2)
	// margin: 0 0 0 20px
	padding: 0 15px
	margin-bottom: 50px

	+screen-medium()
		flex: 0 0 (100% / 4)

		&:last-child::before
			display none !important

		&:nth-child(even)
			margin-top: 50px
			transform: translateX(-3%)

			&::before
				content: ''
				background: url("data:image/svg+xml,%3Csvg width='139' height='54' viewBox='0 0 139 54' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M135.763 14.1061C63.6348 -15.6899 12.7285 32.7821 4.57167 53.3665' stroke='%23FE6128' stroke-width='2' stroke-dasharray='10 10'/%3E%3C/svg%3E%0A") no-repeat center / contain

				position absolute
				bottom 115%
				left 85%

				display block
				width: 139px
				height 54px

				transform: rotate(-3.8deg);

		&:nth-child(odd)

			&::before
				content: ''
				background: url("data:image/svg+xml,%3Csvg width='197' height='102' viewBox='0 0 197 102' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M7.99463 0.973389C12.0435 26.2206 27.8193 64.6268 60.6197 83.2445C98.5653 104.783 175.152 88.1613 192.004 62.0768' stroke='%23FE6128' stroke-width='2' stroke-dasharray='10 10'/%3E%3C/svg%3E%0A") no-repeat center / contain

				position absolute
				top 105%
				left 60%

				display block
				width: 197px
				height 102px

				transform: rotate(-.5deg);
			
	&-inner
		font-size: 14px
		color #A7A7A7
		background: #2D2D2D
		border-left: 4px solid #FE6128
		text-align center
		transform: skewX(-10deg)

		padding: 0 15px 30px

	&-index
		font-size: 72px
		line-height: 48px
		font-weight: 500
		font-style: italic;
		// font-weight: 100
		color #FE6128
		transform: translateY(-45%)


	&-value
		font-size: 20px
		line-height: 1.3
		// font-style: italic;
		// font-weight: 100
		color #fff
		margin-bottom: 10px

	&-label
		// 



.about-desc
	font-size: 14px
	font-weight: 300

	&-wrap
		margin: 20px 0 0

	&-list
		display flex
		flex-flow: row wrap

	&-item
		flex: 0 0 50%
		padding: 0 35px 40px 0

		+screen-medium()
			flex: 0 0 270px
			padding: 0 50px 50px 0

		> span
			display block
			font-size: 80px
			font-weight: 200
			line-height: 1
			white-space: nowrap

	+screen-medium()
		margin: 60px 0 0
		// padding: 70px 0
		padding-left: calc(50% + 45px)

		&-wrap
			background: url(/img/about-img.png) no-repeat center left / 50% auto

