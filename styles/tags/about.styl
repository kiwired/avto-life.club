
.about
	padding: 70px 0
	background: url(/img/about-bg.jpg) no-repeat top center / 100% auto

	&-inner
		display flex
		flex-flow: row wrap
		align-items: flex-start

	+screen-medium()
		// padding: 70px 0


.about-title
	text-transform uppercase
	color #464646
	margin: 0 0 70px

	&::before
		content: '';
		display inline-block
		vertical-align middle
