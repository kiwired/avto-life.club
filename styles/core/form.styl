// Vertical alignment
//input:not([type="radio"]):not([type="checkbox"]),
select
	vertical-align: middle
	// Fix
	position: relative
	text-indent: 0.01px
	text-overflow: ''
	padding-right base-margin

	// border none
	// box-shadow: 1px 2px 4px alpha(black, 0.15)
	background url('data:image/svg+xml;base64,') no-repeat right 10px center / auto 7px white

	overflow: hidden
	text-overflow: ellipsis
	white-space: nowrap

	&.is-error
		box-shadow inset 0 0 0 1px color-danger


// Reset height
// Must be after size modifiers
//==========================================================================

textarea,
select[multiple],
select[size]
	height: auto
