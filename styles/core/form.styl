//========================================================================
// Component: Form
//========================================================================

form-height                    = 44px
form-padding                   = base-margin
form-font-size                 = 16px

form-border-radius             = 3px

form-label                     = base-body-color
form-label-font-size           = base-body-font-size

form-border                    = #ccc
form-background                = #fff
form-color                     = base-body-color

form-focus                     = #ccc
form-disabled                  = #ddd
form-placeholder               = #919191
form-error                     = color-info
form-success                   = color-primary

// Form
// ========================================================================

.form-row
	& + .form-row
		margin-top: base-margin

form
	//

label
	// 

input, select, textarea
	margin: 0
	// Remove `border-radius` in iOS.
	border-radius: 0
	// Correct `font` properties and `color` not being inherited.
	// font: inherit
	font-family base-body-font-family
	font-size form-font-size
	color: inherit

	&:-webkit-autofill,
	&:-webkit-autofill,
	&:-webkit-autofill
		background-color: transparent !important

		&,
		&:hover,
		&:focus,
		&:active
			transition: background-color 5000s ease-in-out 0s, color 5000s ease-in-out 0s

// Address inconsistent `text-transform` inheritance which is only inherit in Firefox
select
	text-transform: none

optgroup
	// Correct `font` properties not being inherited.
	font: inherit
	// Don't inherit the `font-weight` and use `bold` instead.
	// NOTE: Both declarations don't work in Chrome, Safari and Opera.
	font-weight: bold

// Removes inner padding and border in Firefox 4+.
input::-moz-focus-inner
	border: 0
	padding: 0

// Removes excess padding in IE 8/9/10.
input[type="checkbox"],
input[type="radio"]
	position relative
	appearance: none
	display: inline-block
	vertical-align: middle
	line-height inherit
	padding: 0
	margin 0
	width: 32px
	height: @width
	border 1px solid #dadbdc
	border-radius 1px
	outline: 0
	background: white

	&:before
		content: ''
		position absolute
		display block
		width: 0
		height: @width
		top 50%
		left 50%
		transform: translate(-50%, -50%)

		background: #212121

		transition: .15s

	&:checked:before
		width: 16px
		height: @width

	// Improves consistency of cursor style for clickable elements
	&:not(:disabled)
		cursor: pointer

	.is-error > &
	.form-row-checkbox.is-error &
		border 1px solid color-danger

		&:before
			background: color-danger


input[type="radio"]
	border-radius: 50%

	&:checked:before
		border-radius: 50%
		// content: ai-radio


// Remove default style in iOS.
select,
textarea,
input:not([type]),
input[type="text"],
input[type="password"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="number"],
input[type="datetime"]
	appearance: none

// Remove inner padding and search cancel button in Chrome, Safari and Opera on OS X.
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-decoration
	appearance: none

// Fix the cursor style for Chrome's increment/decrement buttons. For certain
// `font-size` values of the `input`, it causes the cursor style of the
// decrement button to change from `default` to `text`.
input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button
	height: auto

// Define consistent border, margin, and padding.
fieldset
	border: none
	margin: 0
	padding: 0

textarea
	// Remove default vertical scrollbar in IE 8/9/10/11.
	overflow: hidden
	// Improve readability and alignment in all browsers.
	vertical-align: top
	max-width 100%

	transition height .1s

// Style
//==========================================================================

// Controls
// Except for `range`, `radio`, `checkbox`, `file`, `submit`, `reset`, `button` and `image`
select,
textarea,
input:not([type]),
input[type="text"],
input[type="password"],
input[type="datetime"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="time"],
input[type="week"],
input[type="number"],
input[type="email"],
input[type="url"],
input[type="search"],
input[type="tel"],
input[type="color"]
	// Responsiveness: Sets a maximum width relative to the parent to scale on narrower viewports
	width: 100%
	// Style
	border 1px solid form-border
	border-radius form-border-radius
	background: form-background
	color: form-color

	input-size(form-height, base-margin, 16px)

	transition .15s cubic-bezier(0.6, 0.04, 0.98, 0.335)

	&:-webkit-autofill
		box-shadow: none

	// Removes placeholder transparency in Firefox.
	&::-moz-placeholder
		opacity: 1

	// Removes `box-shadow` for invalid controls in Firefox.
	&:invalid
		box-shadow: none

	// Focus state
	&:focus
		border-color: form-focus
		outline: 0
		//background: form-focus-background
		// color: form-focus-color
		box-shadow: none

	&:disabled
		// border-color: form-disabled

	+placeholder()
		color: form-placeholder !important
