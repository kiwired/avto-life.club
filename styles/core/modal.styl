.modal
	display block
	position fixed
	top 0
	bottom 0
	left 0
	right 0
	z-index: 10005

	overflow-y: auto
	text-align: center
	// background white

	&::before
		content: ''
		display: inline-block
		height: 100%
		vertical-align: middle
		// margin-right: -4px

	&-overflow
		position fixed

		top 0
		left 0

		height: 100%
		width: @height
		z-index: 1001

		// opacity: 0
		background alpha(black, .6)



	&-window
		position relative
		display: inline-block

		// opacity: 0

		width: 99%
		max-width 420px
		margin: 1% auto

		text-align: left
		vertical-align: middle

		color #333
		background: #fff
		box-shadow: 0px 4px 30px rgba(0, 0, 0, 0.15)
		border-radius: 1px



	&-close
		position absolute
		bottom 100%
		left @bottom

