// Component: Overlay
//=========================================================================

.overlay
	display block
	position relative
	max-width 100%
	// vertical-align middle
	overflow hidden
	transform translateZ(0)
	margin 0

	&-panel
		position: absolute
		top: 0
		bottom: 0
		left: 0
		right: 0

		display flex
		flex-direction column
		justify-content center
		align-items center

		padding base-margin
		color white
		font-size 18px
		font-weight 600
		background alpha(#000, .15)

		transition .3s all ease-in-out

		&::before
			content ''
			display block
			position absolute
			top base-margin
			bottom @top
			left @top
			right @top
			border 1px solid #fff

