
.button
	appearance: none

	position relative
	overflow hidden
	display inline-block
	
	cursor pointer
	outline: none
	border none
	box-shadow: none
	border-radius: 3px

	font: inherit
	font-family: 'Aleo', Helvetica, Arial, sans-serif
	font-weight: 500
	// text-transform uppercase
	color white

	&::before
		content: ''
		display: block
		position: absolute
		top 0
		left 0

		width: 100%
		height: 100%

		// background: darken(background, 15%)
		background: alpha(#fff, .15)
		transform: rotate(-4.7deg) translate(0, 55%) scale(1.1)
		pointer-events: none


	button-size(65px, 50px, 20px)

	+screen-medium()
		button-size(65px, 50px, 20px)

	&-small
		button-size(44px, 30px, 16px)

		+screen-medium()
			button-size(44px, 30px, 16px)

	transition .15s cubic-bezier(0.6, 0.04, 0.98, 0.335)

	&:hover
		text-decoration none

	focus()
		outline: none
		text-decoration none
	
	// button-modifier(white, #212121)
	button-modifier(#fff, #F25A23)
