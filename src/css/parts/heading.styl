
.heading
	position relative
	width: 100%
	padding: 240px 0
	background: no-repeat center / cover #000

	&::before
		content ''
		background: url(/img/heading-bg.svg) no-repeat bottom center / 100% auto
		pointer-events: none

		display block
		position absolute
		bottom 0
		left 0
		width: 100%
		padding-bottom: 50%
		box-shadow: inset 0 -1px 0 #F8F8F9


	&-inner
		display flex
		align-items: center
		justify-content: center

	+screen-medium()
		padding: 240px 0


.heading-title
	// flex: 1 0 auto
	text-align center
	// padding: 0 25px 0 0

	color white
	font-size: 50px
	line-height: 1.3
	font-weight: 600

	> small
		display block
		font-size: 28px
		font-weight: 400

	+screen-medium()
		font-size: 80px

		> small
			font-size: 36px


.heading-action
	font-family: 'Aleo', Helvetica, Arial, sans-serif
	font-size: 18px
	font-weight: 700
	color #F25A23
	text-transform uppercase
	margin: 10px 0 0

	&:hover
	&:active
		color #F25A23
		text-decoration underline
