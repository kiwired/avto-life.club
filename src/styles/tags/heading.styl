
.heading
	width: 100%
	padding: 240px 0
	background: url(/img/heading-bg.svg) no-repeat bottom center / cover #F8F8F9

	&-inner
		display flex
		align-items: center
		justify-content: center

	+screen-medium()
		padding: 240px 0


.heading-title
	// flex: 1 0 auto
	text-align center
	// padding: 0 25px 0 0

	color white
	font-size: 50px
	line-height: 1.3
	font-weight: 600

	> small
		display block
		font-size: 28px
		font-weight: 400

	+screen-medium()
		font-size: 80px

		> small
			font-size: 36px


.heading-action
	font-family: 'Aleo', Helvetica, Arial, sans-serif
	font-size: 18px
	font-weight: 700
	color #F25A23
	text-transform uppercase
	margin: 10px 0 0

	&:hover
	&:active
		color #F25A23
		text-decoration underline
