.home-nav
	display flex
	flex-flow: row wrap
	flex: 1
	margin: 0 (-(base-margin))

	+screen-medium()
		margin: 0
		transform: translateX(-15px)

.home-nav-item
	position relative
	background: no-repeat center / cover #333
	// transform: skewX(-5deg)
	transition: .1s $easing

	flex: 0 0 50%
	height 300px

	// padding: 30px

	display flex
	align-items: flex-start
	justify-content flex-start
	text-align left

	+screen-medium()
		transform: skewX(-7deg) translateX(-3.07vh)
		flex: 0 0 33.3333%
		height 50vh

		align-items: flex-start
		justify-content flex-end
		text-align right

	&-bg
		position absolute
		top 0
		left 0
		width: 100%
		height 100%

		transition: .15s $easing
		background-color: alpha(#000, 20%)

	&-title,
	&-list > a
		padding: 0 30px

		font-size: 18px
		line-height: 50px
		font-weight: 600
		text-transform uppercase

		+screen-medium()
			padding: 0 20px
			font-size: 14px
			line-height: 30px


	&-title
		display inline-block
		color white
		background: #000

		transition: .15s

		> img
			margin-left: 5px
			// transform: rotate()


	&-list
		display flex
		flex-flow: column nowrap
		position absolute
		top 0
		left 0
		
		// width: 100%
		// height 100%

		padding: 50px 0 0

		background: transparent
		transition: .15s

		+screen-medium()
			// top auto
			left auto
			// bottom 0
			right 0
			
			padding: 30px 0 0

		> a
			display block
			opacity 0
			transition: .15s
			transform: translate(0, -50%)

			color white
			background: #C64618

			&:hover
				background: #FE6128
				text-decoration none

			for col in (1..7)
				&:nth-child({col})
					// transform: 'translate(%d%, 0)' % col
					transition: '.15s %ds, background .15s' % (col / 15)


	+screen-medium()
		&:nth-child(-n+3)
			align-items: flex-end
			transform: skewX(-7deg) translateX(3.07vh)

			.home-nav-item-title > img
				transform: rotate(-180deg)

			.home-nav-item-list
				flex-flow: column-reverse nowrap
				top auto
				bottom 0
				padding: 0 0 30px

				> a
					transform: translate(0, 50%)

	&:hover
	&.active
		// background-color: alpha(black, .15)
		text-decoration none

		.home-nav-item-bg
			background-color: alpha(#F25A23, 20%)

		.home-nav-item-title
			background: #FE6128

		.home-nav-item-list > a
			opacity 1
			transform: translate(0)

