.nav
	display flex
	flex-flow: row wrap

.nav-item
	position relative
	transform: skewX(-15deg)

	flex: 0 0 50%
	height 100px

	// padding: 30px

	display flex
	align-items: center
	// justify-content center

	background: #333
	box-shadow: 0 0 0 1px red

	&:nth-child(odd)
		text-align right
		justify-content flex-end

	&-title
		display inline-block
		padding: 0 5px

		background: #000
		color white

		font-size: 13px
		font-weight: 600
		text-transform uppercase


	&-list
		display block
		position absolute
		top 0
		left 0
		width: 100%
		height 100%

		background: transparent
		transition: .15s

		> a
			display block
			opacity 0
			transition: .15s
			transform: translate(0, 50%)

			font-size: 13px
			color white

			for col in (1..5)
				&:nth-child({col})
					// transform: 'translate(%d%, 0)' % col
					transition: '.15s %ds' % (col / 15)
		
		&:hover
		&.active
			background: alpha(black, .15)

			> a
				opacity 1
				transform: translate(0)
				

